<UserControl x:Class="Ranji2019.MyLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid SizeChanged="Grid_SizeChanged">
        <Label Name="mylabel" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="39" Width="121" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20">
            
        </Label>
        <Rectangle Name="rectangle" Height="100" Stroke="#FF040101" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="3"/>

    </Grid>
</UserControl>
