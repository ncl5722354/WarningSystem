            </ScrollViewer>
        </Border>
        <Button Name="add_dizhuang" Content="设置" HorizontalAlignment="Left" Margin="61,740,0,0" VerticalAlignment="Top" Width="136" Height="28" Click="add_dizhuang_Click"/>
    </Grid>
</UserControl>
