<UserControl x:Class="WarningSystem.ZhuZi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="500">
    <Grid x:Name="maingrid">
        <ScrollViewer Name="scrollviewer1"  HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"   Margin="0,0,0,0" VerticalAlignment="Stretch" MouseWheel="scrollviewer1_MouseWheel">
            <Grid Name="subgrid" Width="500"   VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,0,0,0" Background="#330BC9C9" MouseWheel="subgrid_MouseWheel" MouseDown="subgrid_MouseDown" MouseLeave="subgrid_MouseLeave" MouseMove="subgrid_MouseMove" MouseUp="subgrid_MouseUp"/>
        </ScrollViewer>
    </Grid>
</UserControl>
